<UserControl x:Class="OpgaveGUIAfsluttende.UserControls.EmployeeDateField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpgaveGUIAfsluttende.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label x:Name="employeeDateFieldLabel" Content="default" Width="auto" Height="30" />
            <DatePicker x:Name="employeeDateField" Width="200" Height="30" GotFocus="employeeDateField_GotFocus" LostFocus="employeeDateField_LostFocus" />
        </StackPanel>
    </Grid>
</UserControl>
