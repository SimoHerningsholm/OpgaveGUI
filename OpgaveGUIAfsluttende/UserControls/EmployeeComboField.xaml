<UserControl x:Class="OpgaveGUIAfsluttende.UserControls.EmployeeComboField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpgaveGUIAfsluttende.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <!-- Opsætter label og comboboks med dockpanel da stackpanel med horizontal orientation ikke opfangede alignment properties-->
        <DockPanel>
            <!-- Laver en label der stiles af labelstyle fra app resources-->
            <Label Style="{StaticResource labelStyle}" x:Name="employeeComboFieldLabel" Content="default" Width="auto" Height="30" HorizontalAlignment="Left" />
            <!-- Laver en comboboks som stiles af combostyle fra app resources. Derudover har den focus events associeret med henblik på at fremhæve label ved focus-->
            <ComboBox Style="{StaticResource comboStyles}" x:Name="employeeComboField" Width="200" Height="30" GotFocus="employeeComboField_GotFocus" LostFocus="employeeComboField_LostFocus" HorizontalAlignment="Right" />
        </DockPanel>
    </Grid>
</UserControl>
