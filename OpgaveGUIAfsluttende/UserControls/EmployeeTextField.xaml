<UserControl x:Class="OpgaveGUIAfsluttende.UserControls.EmployeeTextField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpgaveGUIAfsluttende.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Label x:Name="employeeTextFieldLabel" Content="default" Width="auto" Height="30" HorizontalAlignment="Left" />
            <TextBox x:Name="employeeTextField" Width="200" Height="30" GotFocus="employeeTextField_GotFocus" LostFocus="employeeTextField_LostFocus" HorizontalAlignment="Right" />
        </DockPanel>
    </Grid>
</UserControl>
