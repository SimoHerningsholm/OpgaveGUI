<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpgaveGUIAfsluttende"
    xmlns:custom="clr-namespace:OpgaveGUIAfsluttende">
    <Style TargetType = "{x:Type local:CreateEmployee}" BasedOn = "{StaticResource {x:Type Button}}">
        <Setter Property = "Background" Value = "LightSalmon" />
        <Setter Property = "Foreground" Value = "Blue"/>
        <Setter Property= "Width" Value="auto"/>
        <Setter Property= "Height" Value="300"/>
    </Style>

    <Style TargetType="{x:Type local:QueryEmployee}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:QueryEmployee}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
